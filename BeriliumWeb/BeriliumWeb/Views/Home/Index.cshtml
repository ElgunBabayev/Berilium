@model HomeViewModel
<div class="gtco-container">
    <div class="row">
        <div class="col-md-12">
            <div class="owl-carousel owl-carousel-fullwidth">
                @foreach (Banner item in Model.Banners)
                {
                    <div class="item">
                        <a href="#">
                            <img src="~/images/@item.Image" alt="@item.Name">
                            <div class="slider-copy">
                                <h2>@item.OverLoad</h2>
                            </div>
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<div class="gtco-section">
    <div class="gtco-container">
        <div class="row">
            <div class="col-md-8 col-md-offset-2 gtco-heading text-center">
                <h2>Work</h2>
                <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Phasellus placerat enim et urna sagittis, rhoncus euismod erat tincidunt. Donec tincidunt volutpat erat.</p>
            </div>
        </div>
        <div class="row">

            <div class="col-md-12">
                <div class="owl-carousel owl-carousel-carousel">
                    @foreach (Work item in Model.Works)
                    {
                        <div class="item">
                            <div class="gtco-item">
                                <a href="#"><img src="~/images/@item.Image" alt="" class="img-responsive"></a>
                                <h2><a href="#">@item.Name</a></h2>
                                <p class="role">@item.Blur</p>
                            </div>
                        </div>
                    }

                </div>
            </div>

        </div>
    </div>
</div>
<!-- END Work -->

<div class="gtco-section">
    <div class="gtco-container">
        <div class="row">
            <div class="col-md-6 gtco-news">
                <h2>News</h2>
                <ul>
                    @foreach (News item in Model.News)
                    {
                        <li>
                            <a href="#">
                                <span class="post-date">@item.Date</span>
                                <h3>@item.Title</h3>
                                <p>@item.Text</p>
                            </a>
                        </li>
                    }
                </ul>
                <p><a href="#" class="btn btn-sm btn-special">More News</a></p>
            </div>
            <!-- END News -->
            <div class="col-md-5 col-md-push-1 gtco-testimonials">
                <h2>Testimonials</h2>
                <blockquote>
                    <p>&ldquo;@Model.Testimonials.UpText&ldquo;</p>
                    <p class="author"><cite>&mdash; @Model.Testimonials.UpWriter</cite></p>
                </blockquote>
                <blockquote>
                    <p>&ldquo;@Model.Testimonials.DownText&ldquo;</p>
                    <p class="author"><cite>&mdash; @Model.Testimonials.DownWriter</cite></p>
                </blockquote>
            </div>
        </div>
    </div>
</div>
<!-- END  -->

<div class="gtco-section gto-features">
    <div class="gtco-container">
        <div class="row">
            @foreach (Features item in Model.Features)
            {
                <div class="col-md-4">
                    <div class="feature-left">
                        <i class="@item.Icon"></i>
                        <div class="copy">
                            <h3>@item.Title</h3>
                            <p>@item.Text</p>
                            <p><a href="#" class="gtco-more">Learn more</a></p>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</div>